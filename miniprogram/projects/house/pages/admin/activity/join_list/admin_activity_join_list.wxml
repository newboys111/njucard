<view wx:if="{{isLoad===null}}" class="margin-top load notexist text-l text-grey"></view>
<view wx:if="{{isLoad===false}}" class="margin-top load loading text-l text-grey"></view>

<block wx:if="{{isAdmin&&isLoad}}">

	<cmpt-comm-list source='admin' id="cmpt-comm-list" type="admin-activity-join-list" search="{{search}}" _params="{{_params}}" _menus="{{sortMenus}}" _items="{{sortItems}}" route="admin/activity_join_list" topBottom="50" placeholder="搜索" sortMenusDefaultIndex="0" bind:list="bindCommListCmpt">

		<view slot="searchEnd">
			<button bindtap="bindCancelAllTap" class="btn mid radius bg-orange margin-right-xs light">所有记录审核不通过</button>
		</view>

		<!-- List Begin -->
		<view class="join-list">
			<view wx:if="{{dataList && dataList.total }}" class="load text-grey">共有{{dataList.total}}条符合条件记录
				<text wx:if="{{isAllFold}}" bindtap="bindUnFoldAllTap" class="margin-left-xs icon-unfold  text-admin">全部展开</text>
				<text wx:else bindtap="bindFoldAllTap" class="margin-left-xs icon-fold  text-admin">全部收起</text>
			</view>

			<view class="item" wx:for="{{dataList.list}}" wx:key="key">
				<view class="header">
					<view class="left">
						<text class="icon-calendar margin-right-xxs"></text><text class="">{{item.ACTIVITY_JOIN_ADD_TIME}}</text>
					</view>
					<view class="right" bindtap="bindCopyTap" data-idx="{{index}}">
						<text class="icon-copy margin-right-xxs"></text>复制资料
					</view>
				</view>

				<view class="info">

					<view class="info-item">
						<view class="title">状态</view>
						<view class="mao">：</view>
						<view class="content">
							<view wx:if="{{item.ACTIVITY_JOIN_STATUS==1}}" class="text-green"><text class="icon-roundcheck margin-right-xxs"></text>报名成功
								<text wx:if="{{item.ACTIVITY_JOIN_IS_CHECKIN==1}}">，已签到</text>
								<text class="text-grey" wx:else>，未签到</text>
							</view> 
							<view wx:elif="{{item.ACTIVITY_JOIN_STATUS==0}}" class="text-blue">等待审核</view>
							<view wx:elif="{{item.ACTIVITY_JOIN_STATUS==99}}" class="text-grey">审核不过</view>
						</view>
					</view>

					<view class="info-item" wx:if="{{item.ACTIVITY_JOIN_STATUS==99}}">
						<view class="title">未通过原因</view>
						<view class="mao">：</view>
						<view class="content">{{item.ACTIVITY_JOIN_REASON||'未填'}}</view>
					</view> 

					<view class="info-item" wx:for="{{item.ACTIVITY_JOIN_FORMS}}" wx:key="key1" wx:for-item="form" wx:for-index="formindex" wx:if="{{formindex<3||!item.fold}}">
						<view class="title">{{form.title}}</view>
						<view class="mao">：</view>
						<view wx:if="{{form.type=='mobile'}}" class="content" bindtap="url" data-type="phone" data-url="{{form.val}}">{{form.val}}<text class=" margin-left-xs icon-phone text-black text-normal"></text></view>
						<view wx:else class="content" bindtap="url" data-type="copy" data-url="{{form.title+'：'+form.val}}">{{form.val}}</view>
					</view>
					<view bindtap="bindUnFoldTap" data-idx="{{index}}" wx:if="{{item.fold && item.ACTIVITY_JOIN_FORMS.length>3}}" class="fold"><text class="icon-unfold margin-right-xs"></text>更多资料...</view>

					<view bindtap="bindFoldTap" data-idx="{{index}}" wx:if="{{!item.fold && item.ACTIVITY_JOIN_FORMS.length>3}}" class="fold"><text class="icon-fold margin-right-xs"></text>收起</view>

					<view class="oprt">
						<block wx:if="{{item.ACTIVITY_JOIN_STATUS==1}}">
							<view wx:if="{{item.ACTIVITY_JOIN_IS_CHECKIN==0}}" bindtap="bindCheckinTap" data-idx="{{index}}" data-flag="1" class="btn bg-purple margin-right-s light">签到核销</view>

							<view wx:else bindtap="bindCheckinTap" data-idx="{{index}}" data-flag="0" class="btn bg-grey light margin-right-s">取消签到</view>
						</block>

						<block wx:if="{{item.ACTIVITY_JOIN_STATUS==0||item.ACTIVITY_JOIN_STATUS==1}}">
							<view bindtap="bindCancelTap" data-idx="{{index}}" data-status="99" data-old="{{item.ACTIVITY_JOIN_STATUS}}" class="btn bg-grey light  margin-right-s">审核不过</view>
						</block>

						<block wx:if="{{item.ACTIVITY_JOIN_STATUS==0 || item.ACTIVITY_JOIN_STATUS==99}}">
							<view bindtap="bindStatusTap" data-idx="{{index}}" data-status="1" data-old="{{item.ACTIVITY_JOIN_STATUS}}" class="btn bg-olive light margin-right-s">审核通过</view>
						</block>

						<view bindtap="bindDelTap" data-idx="{{index}}" class="btn bg-orange light margin-right-s">删除</view>

					</view>
				</view>

				<view class="no">{{index+1}}</view>
			</view>
		</view>
		<!-- List END -->

		<!--load begin-->
		<import src="../../../../../../tpls/public/list_load_tpl.wxml" />
		<template is="listLoadTpl" data="{{dataList,skin:'text-grey',noHint:'暂无记录'}}" />
		<!--load end-->


	</cmpt-comm-list>

	<cmpt-modal wx:if="{{cancelAllModalShow}}" model:show="{{cancelAllModalShow}}" type="dialog" title="所有记录审核不过" bind:click="bindCancelAllCmpt" class="modal-form" cancelText="返回" confirmText="确定">
		<view class="form-group" style="padding:0 10rpx">
			<view class="title">理由 <text class="text-grey text-mid">(选填)</text>：</view>
			<view bindtap="bindClearReasonTap" style="width:150rpx;text-align: right;" class="text-grey"><text class="icon-roundclose"></text>清空</view>
		</view>

		<view class="form-group cancel-area">
			<textarea placeholder-class="phc" placeholder="请输入审核不过理由 (非必填)" style="height:110rpx" model:value="{{formReason}}" maxlength="100"></textarea>
		</view>
	</cmpt-modal>

	<cmpt-modal wx:if="{{cancelModalShow}}" model:show="{{cancelModalShow}}" type="dialog" title="审核不过" bind:click="bindCancelCmpt" class="modal-form" cancelText="返回" confirmText="确定">
		<view class="form-group" style="padding:0 10rpx">
			<view class="title">审核不过理由 <text class="text-grey text-mid">(选填)</text>：</view>
			<view bindtap="bindClearReasonTap" style="width:150rpx;text-align: right;" class="text-grey"><text class="icon-roundclose"></text>清空</view>
		</view>

		<view class="form-group cancel-area">
			<textarea placeholder-class="phc" placeholder="请输入审核不过理由 (非必填)" style="height:110rpx" model:value="{{formReason}}" maxlength="100"></textarea>
		</view>
	</cmpt-modal>

</block>